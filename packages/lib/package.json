{
  "name": "@pyoner/svelte-form",
  "version": "1.0.2",
  "description": "A library that helps you build a HTML form from a JSON Schema",
  "keywords": [
    "svelte",
    "form",
    "validate",
    "validator",
    "validation",
    "json",
    "schema",
    "json-schema"
  ],
  "main": "dist/index.js",
  "module": "dist/index.es5.js",
  "svelte": "src/index.ts",
  "typings": "dist/types/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "author": "Jungle <devex.soft@gmail.com>",
  "homepage": "https://github.com/pyoner/svelte-form/tree/master/packages/lib#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/pyoner/svelte-form"
  },
  "bugs": {
    "url": "https://github.com/pyoner/svelte-form/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc --emitDeclarationOnly -d --declarationDir ./dist/types && rollup -c rollup.config.ts",
    "start": "rollup -c rollup.config.ts -w",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "travis-deploy-once": "travis-deploy-once",
    "format": "prettier --plugin-search-dir=. --write 'src/**/*' 'test/**/*'"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@pyoner/svelte-ts-preprocess": "^1.3.0",
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@types/jest": "^24.9.0",
    "@types/node": "^13.1.8",
    "@types/type-detect": "^4.0.1",
    "@wessberg/rollup-plugin-ts": "^1.2.25",
    "camelcase": "^5.3.1",
    "colors": "^1.4.0",
    "commitizen": "^4.0.3",
    "coveralls": "^3.0.9",
    "cross-env": "^6.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^4.0.10",
    "jest": "^24.9.0",
    "jest-config": "^24.9.0",
    "json-schema-typed": "^7.0.3",
    "lint-staged": "^10.0.0",
    "pretty-quick": "^2.0.1",
    "prompt": "^1.0.0",
    "replace-in-file": "^5.0.2",
    "rimraf": "^3.0.0",
    "rollup": "^2.19.0",
    "rollup-plugin-analyzer": "^3.2.2",
    "rollup-plugin-sourcemaps": "^0.5.0",
    "rollup-plugin-svelte": "^5.1.1",
    "semantic-release": "^16.0.2",
    "shelljs": "^0.8.3",
    "svelte": "^3.17.1",
    "travis-deploy-once": "^5.0.11",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.6.2",
    "tslib": "^1.10.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^9.0.0"
  },
  "dependencies": {
    "@pyoner/svelte-form-common": "workspace:^0.1.2",
    "is-what": "^3.7.1"
  },
  "peerDependencies": {
    "typescript": "^3.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
